# Pinterest Scraper API v4.0 Environment Variables

# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Database (SQLite for development, PostgreSQL for production)
DATABASE_URL="file:./dev.db"
# DATABASE_URL="postgresql://username:password@localhost:5432/pinterest_scraper"

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=http://localhost:3000

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=900000
DEFAULT_IMAGE_COUNT=20
MAX_IMAGE_COUNT=100

# Security
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-character-encryption-key

# Browser Configuration
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
SCROLL_DELAY=2000

# Monitoring & Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
ENABLE_REQUEST_LOGGING=true

# External Services
PINTEREST_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"

# Development Only
PLAYWRIGHT_BROWSERS_PATH=./playwright-browsers
